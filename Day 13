#local vs global variables

#local is only used in the function

#global is used within and outside the function


x=4 #global
print(x)

def hello():
    x=5
    print(f"the local x is {x}")
    print("hello faizan")

hello()

print(f"the global x is {x}")

x=5

def m_function():
    global x
    x=10
    
   

m_function()

y=4

print(x) #will print 10 instead of 5
print(y)

 #file io in python, file handling

